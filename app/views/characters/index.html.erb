<h2>Characters</h2>

<section>
  <div class="flex-container characters">
    <% @characters.each do |char| %>
    <div class="flex-cell-1-3 character">
      <h3><%= link_to char.name, character_path(char.id) %></h3>
      <h4><%= Race.find(char.race_id).species %></h4>
      <div style="background-image: url('<%= char.img_url %>')" class="character-img"></div>
    </div>
    <% end %>
  </div>
</section>
